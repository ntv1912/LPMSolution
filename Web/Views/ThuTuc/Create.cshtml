@model Infrastructure.Models.ThuTuc
@{
	ViewData["Title"] = "Create";
}
<h1>Create</h1>
<h4>Thu Tuc</h4>
<br />
<div class="row">
	<form asp-action="Create">
		<div asp-validation-summary="ModelOnly"></div>
		<div class="form-group">
			<label asp-for="MaThuTuc" class="control-label"></label>
			<input asp-for="MaThuTuc" class="form-control" />
			<span asp-validation-for="MaThuTuc" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="TenThuTuc" class="control-label"></label>
			<input asp-for="TenThuTuc" class="form-control" />
			<span asp-validation-for="TenThuTuc" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="MoTa" class="control-label"></label>
			<input asp-for="MoTa" class="form-control" />
			<span asp-validation-for="MoTa" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="LinhVucId" class="control-label"></label>
			<select asp-for="LinhVucId" asp-items="ViewBag.LinhVucId" class="form-control" ></select>
		</div>
	
		<input type="submit" class="btn btn-primary"  />
		@if (!ViewData.ModelState.IsValid)
		{
			<div class="alert alert-danger">
				@Html.ValidationSummary(false, "", new { @class = "text-danger" })
			</div>
		}
	</form>
</div>
@section Scripts{
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}