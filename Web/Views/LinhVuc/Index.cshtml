@model IEnumerable<Infrastructure.Models.LinhVuc>
@{
	ViewData["Title"] = "Index";
}
<h1>
	Index
</h1>
<p>
	<a asp-action="Create" >Create New</a>
</p>
@using (Html.BeginForm("Index","LinhVuc",FormMethod.Get))
{
	<div class="form-group">
		<b >Search</b>
		@Html.TextBox("searching")<input class="form-control btn btn-success w-20" type="submit" value="Search" />
	</div>

}
<table class="table  table-bordered table-striped" >
	<thead>
		<tr>
			
			<th>
				@Html.DisplayNameFor(model => model.MaLinhVuc)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.TenLinhVuc)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.MoTa)
			</th>
			
		</tr>
	</thead>
	<tbody>
		@if (Model.Count() == 0)
		{
			<tr>
				<td>NOT FOUND</td>
			</tr>
		}
		else
		{
			
		
			foreach(var item in Model)
			{
			<tr>
				
				<td>
					@Html.DisplayFor(modelItem => item.MaLinhVuc)
				</td>

				<td>
					@Html.DisplayFor(modelItem => item.TenLinhVuc)
				</td>

				<td>
					@Html.DisplayFor(modelItem => item.MoTa)
				</td>
				<td class="btn btn-group">
					<a asp-action="Edit" asp-route-id="@item.Id">Edit</a>|
					<a asp-action="Details" asp-route-id="@item.Id">Details</a>|
					<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>

				</td>
			</tr>
		}
		}
	</tbody>
</table>